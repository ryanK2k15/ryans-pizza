<%- include('_header'); -%>

<% if(typeof totalPrice !== "undefined" && totalPrice !== 0) { %>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<ul class="list-group">
				<% items.forEach(function(item) { %>
					<li class="list-group-item">
						<strong><%= item.qty %> x </strong>
						<strong><%= item.item.name %></strong>
						<span class="label label-success">€<%= item.price.toFixed(2) %></span>
						<!-- <a href="/remove/<%= item.item._id%>" class="btn btn-primary btn-xs" role="Button">Remove 1</a> -->
						<a href="/removeAll/<%= item.item._id%>" class="btn btn-primary btn-xs pull-right" role="Button">Remove</a>
					</li>
				<% }) %>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<strong>Total: €<%= totalPrice.toFixed(2) %></strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<a href="/checkout" type="button" class="btn btn-success">Checkout</a>
		</div>
	</div>
	
<% } else { %>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<h2>No Items in Cart </h2>
		</div>
	</div>
<% } %>

<%- include("_footer"); -%>